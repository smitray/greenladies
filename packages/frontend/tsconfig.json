{
	"compilerOptions": {
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"isolatedModules": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es6",
		"types": ["node", "jest"]
	},
	"extends": "../../tsconfig.base.json",
	"include": ["src"],
	"exclude": ["node_modules"]
}
